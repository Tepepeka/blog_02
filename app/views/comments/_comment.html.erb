<p>
    <%= comment.body %>
</p>
<footer class="blockquote-footer">by @<cite title="Source Title"><%=link_to comment.user.name, user_path(comment.user_id)%></cite></footer></blockquote>
<% if owner?(comment) %>
    <%= link_to "Destroy", [comment.article, comment], data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    } %>
<%end%>