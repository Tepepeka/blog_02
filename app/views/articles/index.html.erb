<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @articles.take(6).each do |article| %>
    <div class="col">
      <div class="card h-100  border-warning opacity-75 text-dark-grey">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <p class="card-text"><%= article.body %></p>
          <footer class="blockquote-footer">by @<cite title="Source Title"><%= link_to User.find(article.user_id).name, user_path(User.find(article.user_id)) %></cite></footer></blockquote>
          <button type="button" class="btn btn-link"><%= link_to "Show", article %></button>
        </div>
      </div>
    </div>
  <% end %>
</div>