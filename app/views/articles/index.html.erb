<%=link_to "New Article", new_article_path, class:"btn btn-warning"%>

<div class="overflow-scroll row row-cols-1 row-cols-md-3 g-4 mt-1"  style="max-height: 480px;">
  <% @articles.reverse.each do |article| %>
    <div class="col">
      <div class="card h-100  border-warning opacity-75 text-dark-grey">
        <div class="card-body">
          <h5 class="card-title"><%=article.title %></h5>
          <p class="card-text"><%=article.body %></p>
          <footer class="blockquote-footer">by @<cite title="Source Title"><%=link_to article.user.name, user_path(article.user_id)%></cite></footer></blockquote>  
          <%=link_to "Show", article, class:"btn btn-primary"%>
          <%=article.comments.count %>
        </div>
      </div>
    </div>
  <% end %>
</div>