<div class="card border-warning opacity-75 text-dark-grey" style="max-width: 50%;">
    <div class="card-body">
        <h5 class="card-title"><%=@article.title %></h5>
        <p class="card-text"><%=@article.body %></p>
        <footer class="blockquote-footer">by @<cite title="Source Title"><%=link_to @article.user.name, user_path(@article.user_id)%></cite></footer></blockquote>
        <%= link_to "Edit", edit_article_path(@article) %>
        <%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
        <%=link_to "Back", root_path%>
    </div>
</div>